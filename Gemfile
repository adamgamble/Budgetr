source 'http://rubygems.org'

gem 'rails', '3.1.0'
gem 'haml-rails'
gem 'pg'
gem 'kaminari'
gem 'devise'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

group :test do
  gem 'rspec-rails'
  gem 'json_spec', "~> 0.6.0"
  gem 'shoulda', '~> 2.11.3'
  gem 'cucumber-rails'
  gem 'database_cleaner'
end
