.page-header
  %h1
    Create New Transaction
%ul.breadcrumb
  %li
    %a{:href => "/dashboard"} Dashboard
    %span{:class => "divider"} /
  %li
    %a{:href => account_path(@envelope.account)}=@envelope.account.name
    %span{:class => "divider"} /
  %li
    %a{:href => account_envelope_path(@envelope.account,@envelope)}=@envelope.name
    %span{:class => "divider"} /
  %li
    %span New Transaction
=form_for Transaction.new, :url => account_envelope_transactions_path(@envelope.account, @envelope), :class => "form-stacked" do |f|
  .form-stacked
    %fieldset
      =f.label :description
      =f.text_field :description, :class => "xlarge error"
      =f.label :amount
      =f.text_field :amount, :class => "xlarge error"
      =f.label :deposit?
      =check_box_tag :deposit
      %br
      %br
      =f.submit :class => "btn primary"

